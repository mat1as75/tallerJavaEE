{
  "uid": "InfluxDB",
  "title": "Dashboard Pasarela de Pagos (Flux)",
  "timezone": "browser",
  "editable": true,
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-30m",
    "to": "now"
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Pagos Confirmados",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "datasource": {
            "type": "influxdb",
            "uid": "InfluxDB"
          },
          "query": "from(bucket: \"TallerJava\") |> range(start: -30m) |> filter(fn: (r) => r._measurement == \"payment_ok\" and r._field == \"value\")"
        }
      ]
    },
